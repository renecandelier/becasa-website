{%- comment -%}
  Pass in:
  title:String
    - title of product or article, ie. shop.name or article.title
  url:String
    - absolute url of product or article
  image:String
    - url of image to share
{%- endcomment -%}

<div class="share-icons" data-share="{{ 'product.share' | t }}">
  <a
    target="_blank"
    rel="noopener"
    class="btn btn--x-small share-icons__icon"
    href="//twitter.com/intent/tweet?text={{ title | url_param_escape }}&amp;url={{ url }}"
  >
    {% render 'icon' with icon: 'twitter' %}
    <span class="share-icons__label">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
  </a>
  <a
    target="_blank"
    rel="noopener"
    class="btn btn--x-small share-icons__icon"
    href="//www.facebook.com/sharer.php?u={{ url }}"
  >
    {% render 'icon' with icon: 'facebook' %}
    <span class="share-icons__label">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
  </a>
  <a
    target="_blank"
    rel="noopener"
    class="btn btn--x-small share-icons__icon"
    href="//pinterest.com/pin/create/button/?url={{ url }}&amp;media={{ image | image_url: width: 1024, height: 1024 }}&amp;description={{ title | url_param_escape }}"
  >
    {% render 'icon' with icon: 'pinterest' %}
    <span class="share-icons__label">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
  </a>
</div>
